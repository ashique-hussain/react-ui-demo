{
	"editor.rulers": [100],
	"files.exclude": {
		"**/.git": true,
		"**/node_modules": true,
		"**/.next": true,
		"**/coverage": true
	},
	"editor.formatOnSave": true, // auto format the file on each save
	"editor.formatOnPaste": true, // auto format the file on each paste
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"json",
		"graphql"
	],
	"eslint.alwaysShowStatus": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.packageManager": "npm", // change to npm if you use yarn
	"eslint.quiet": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"jest.enableInlineErrorMessages": true,
	"jest.showCoverageOnLoad": true,
	"jest.runAllTestsFirst": false
}
